---
import { convertPathToHtml } from "../../../utils/index.js"
const { path, mainPage, page } = Astro.props
const htmlPath = convertPathToHtml(path);

// Smart path resolution: calculate relative path based on directory depth
const pathname = Astro.url.pathname;
const pathSegments = pathname.split('/').filter(segment => segment !== '');
const depth = pathSegments.length > 0 ? pathSegments.length - 1 : 0;
const deploymentPath = depth === 0 ? './' : '../'.repeat(depth);
---

<!--begin::Sidebar-->
<aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
  <!--begin::Sidebar Brand-->
  <div class="sidebar-brand">
    <a href={htmlPath + "/index.html"} class="brand-link">
      <img
        src={deploymentPath + "assets/img/AdminLTELogo.png"}
        alt="ALPHA Logo"
        class="brand-image opacity-75 shadow"
      />
      <span class="brand-text fw-light">ALPHA</span>
    </a>
  </div>
  <!--end::Sidebar Brand-->

  <!--begin::Sidebar Wrapper-->
  <div class="sidebar-wrapper">
    <nav class="mt-2">
      <!--begin::Sidebar Menu-->
      <ul
        class="nav sidebar-menu flex-column"
        data-lte-toggle="treeview"
        role="navigation"
        aria-label="Main navigation"
        data-accordion="false"
        id="navigation"
      >
        <!-- Dashboard -->
        <li class:list={["nav-item", mainPage === "dashboard" && "menu-open"]}>
          <a href={htmlPath + "/index.html"} class:list={["nav-link", mainPage === "dashboard" && "active"]}>
            <i class="nav-icon bi bi-speedometer"></i>
            <p>Dashboard</p>
          </a>
        </li>

        <!-- SETTINGS -->
        <li class="nav-header">SETTINGS</li>
        <li class:list={["nav-item", mainPage === "settings" && "menu-open"]}>
          <a href="#" class:list={["nav-link", mainPage === "settings" && "active"]}>
            <i class="nav-icon bi bi-gear"></i>
            <p>
              Settings
              <i class="nav-arrow bi bi-chevron-right"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href={htmlPath + "/settings/profile.html"} class:list={["nav-link", page === "profile" && "active"]}>
                <i class="nav-icon bi bi-circle"></i>
                <p>Profile</p>
              </a>
            </li>
            <li class="nav-item">
              <a href={htmlPath + "/settings/users/index.html"} class:list={["nav-link", page === "users" && "active"]}>
                <i class="nav-icon bi bi-circle"></i>
                <p>Users</p>
              </a>
            </li>
            <li class="nav-item">
              <a href={htmlPath + "/settings/branches/index.html"} class:list={["nav-link", page === "branches" && "active"]}>
                <i class="nav-icon bi bi-circle"></i>
                <p>Branches</p>
              </a>
            </li>
          </ul>
        </li>

        <!-- LOGOUT -->
        <li class="nav-header">ACCOUNT</li>
        <li class="nav-item">
          <a href={htmlPath + "/logout.html"} class="nav-link text-danger">
            <i class="nav-icon bi bi-box-arrow-right"></i>
            <p>Logout</p>
          </a>
        </li>
      </ul>
      <!--end::Sidebar Menu-->
    </nav>
  </div>
  <!--end::Sidebar Wrapper-->
</aside>
<!--end::Sidebar-->
